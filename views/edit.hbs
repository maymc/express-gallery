{{!-- see a form to edit a gallery photo identified by the :id param
the form fields are:
author : Text
link : Text (the image url)
description : TextArea --}}

<div id='title'>
  <h1>_ARCHITEKT</h1>
</div>

<form action="/gallery/{{id}}?_method=PUT" method="post">
  <h1 class="editSection">Editing photo:</h1>
  <label>Author:<br>
    <textarea name="author" id="">{{author}}</textarea>
  </label>
  <br><br>
  <label>Link:<br>
    <textarea name="link" id="">{{link}}</textarea>
  </label>
  <br><br>
  <label>Description:<br>
    <textarea name="description" id="">{{description}}</textarea>
  </label>
  <br><br>
  <input class="submitBtn" type="submit" value="Submit">
</form>
<br>
<a class="redirect" href="/">Back to gallery</a>